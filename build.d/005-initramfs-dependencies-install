#!/bin/sh
set -euo pipefail
source $SCRIPTS_DIR/util-log

SCRIPT_NAME=$0

log_message $SCRIPT_NAME "Instalar paquetes b치sicos '$INITRAMFS_INSTALLER_DIR'"
new_line

debug_message $SCRIPT_NAME "Solicitando actualizaci칩n de base de datos apk update"
new_line

doas /sbin/apk update --root $INITRAMFS_INSTALLER_DIR \
  --repositories-file /dev/null \
  --repository "http://os.wolfbear.mx/1.0/apk"

doas /sbin/apk --root $INITRAMFS_INSTALLER_DIR \
  --repositories-file /dev/null \
  --repository "http://os.wolfbear.mx/1.0/apk" \
  add \
    apk-tools \
    shadow \
    dhcpcd \
    openresolv \
    util-linux \
    strace \
    openssh \
    grub-efi \
    parted \
    e2fsprogs \
    e2fsprogs-extra \
    dosfstools \
    rsync \
    nano \
    libc-utils

log_message $SCRIPT_NAME "Instalaci칩n de paquetes b치sicos terminada"
