#!/bin/sh
set -euo pipefail
source $SCRIPTS_DIR/util-log

SCRIPT_NAME=$0

log_message $SCRIPT_NAME "Iniciando limpieza de '$INITRAMFS_DIR'"
debug_message $SCRIPT_NAME "Desmontando particiones montadas en '$INITRAMFS_DIR'"

for fs in proc sys dev; do
  mountpoint -q "$INITRAMFS_DIR/$fs" && doas umount -l "$INITRAMFS_DIR/$fs"
done

debug_message $SCRIPT_NAME "Eliminando directorio '$INITRAMFS_DIR'"
doas rm -rf "$INITRAMFS_DIR"

debug_message $SCRIPT_NAME "Creando directorio vac√≠o '$INITRAMFS_DIR'"
mkdir -p "$INITRAMFS_DIR"

log_message $SCRIPT_NAME "Limpieza de '$INITRAMFS_DIR' finalizada"