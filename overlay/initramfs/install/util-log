#!/bin/sh
set -euo pipefail

log_message() {
  local script="$1"
  local message="$2"
  echo "[ $script ] \033[0;32m[ LOG ]\033[0;32m \033[0m $message"
}

debug_message() {
  local script="$1"
  local message="$2"
  if [ "${DEBUG:-0}" -eq 1 ]; then
    echo "[ $script ] \033[0;32m[ DEBUG ]\033[0;32m \033[0m $message"
  fi
}

ensure_dir() {
  if [ -z "${1-}" ]; then
    echo "[ERROR] ensure_dir requiere un argumento" >&2
    exit 1
  fi
  mkdir -p "$1"
}
