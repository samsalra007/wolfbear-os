#!/bin/sh
set -euo pipefail

# Asume que tu script 'install' est√° junto al subdirectorio 'install/'
BASEDIR=$(cd "$(dirname "$0")" && pwd)
SCRIPTS_DIR="$BASEDIR/install"

echo "üîÑ Ejecutando secuencialmente los scripts de instalaci√≥n‚Ä¶"

i=0
while :; do
  prefix=$(printf "%03d" "$i")

  # Esta l√≠nea expande el patr√≥n y pone las coincidencias en "$@"
  set -- "$SCRIPTS_DIR/${prefix}-"*
  # Si la primera posici√≥n no existe, no hay ning√∫n fichero
  if [ ! -e "$1" ]; then
    echo
    echo "‚úÖ Secuencia terminada en $prefix (no existe ${prefix}-*)"
    break
  fi

  # Ejecuta cada script que s√≠ exista y sea ejecutable
  for script in "$SCRIPTS_DIR/${prefix}-"*; do
    [ -f "$script" ] || continue
    [ -x "$script" ] || { echo "‚ö†Ô∏è Saltando $script (no es ejecutable)"; continue; }
    echo
    echo "‚ñ∂Ô∏è  Ejecutando $script"
    "$script"
  done

  i=$((i + 1))
done

echo
echo "‚úÖ Todos los scripts numerados han finalizado."
