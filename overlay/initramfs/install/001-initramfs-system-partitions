#!/bin/bash
set -euo pipefail

source /install/util-log

SCRIPT_NAME=$0

log_message $SCRIPT_NAME "Montando particiones del sistema y dispositivos de instalaci贸n."

mkdir -p /mnt/install/

# Las particiones del sistema dev sys y proc ya las estamos montando en el init de initramfs
# por lo que no es necesario volverlas a montar aqui, solo los recursos de instalaci贸n

log_message $SCRIPT_NAME "Montando recursos de instalaci贸n."

mount -t ext4 /dev/vda3 /mnt/install/

echo "[initramfs-system-partitions] Particiones montadas exitosamente"
log_message $SCRIPT_NAME "Montando particiones del sistema y dispositivos de instalaci贸n."
