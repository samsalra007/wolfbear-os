#!/bin/sh
set -euo pipefail
source $SCRIPTS_DIR/util-log

SCRIPT_NAME=$0

log_message $SCRIPT_NAME "Iniciando limpieza de '$DEPENDENCY_LINUX_DIR'"

debug_message $SCRIPT_NAME "Eliminando directorio '$DEPENDENCY_LINUX_DIR'"
sudo rm -rf "$DEPENDENCY_LINUX_DIR"

debug_message $SCRIPT_NAME "Creando directorio vac√≠o '$DEPENDENCY_LINUX_DIR'"
mkdir -p "$DEPENDENCY_LINUX_DIR"

log_message $SCRIPT_NAME "Limpieza de '$DEPENDENCY_LINUX_DIR' finalizada"